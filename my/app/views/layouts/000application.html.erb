<!DOCTYPE html>
<html>
  <head>
    <title>Сайт петиций</title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <div>
      <h1><%= link_to 'Петиции моего района', root_path %></h1>
    </div>
    <div id="container">
    <div id="user_header">
    <div style= "clear: both; float: right;">
      <% if current_user %>
        Вошли как <%= current_user.email %>
        <%= link_to "Выйти", log_out_path %>
      <% else %>
        <%= link_to "Зарегистрироваться", new_user_path %> |
        <%= link_to "Войти", new_session_path %>
      <% end %>
    </div>

        <div id="petition">
    <div style= "clear: both; float: light;">
        <%= link_to "Все петиции", petitions_path %>
        <% if current_user %>
          <%= link_to "Создать петицию", new_petition_path %>
          <%= link_to "Мои петиции", petitions_path(my: true) %>
        <% else %>
          <%= link_to "Создать петицию", new_session_path %>
        <% end %>
    </div>


    <% flash.each do |name, msg| %>
    <%= content_tag :div, msg, :id => "flash#{name}" %>
    <% end %>

    <%= yield %>

  </body>
</html>







