<h2 class="text-center">Создание петиции</h2>

<%= form_for :petition, url: petitions_path do |f| %>

  <form class="form-horizontal">
    <div class="form-group form-group-sm">
      <label class="col-sm-2 control-label" for="formGroupInputSmall">Тема:</label>
      <div class="col-sm-10">
        <%= f.text_field :title %>
      </div>
    </div>
    <div class="form-group form-group-sm">
      <label class="col-sm-2 control-label" for="formGroupInputSmall">Текст:</label>
      <div class="col-sm-10">
        <%= f.text_area :text %>
      </div>
    </div>
    <div class="actions text-center"> 
      <%= submit_tag 'Сохранить петицию', class: 'btn btn-default' %>
    </div>
  </form>
    </br>
<%= link_to 'Назад', petitions_path %>
<% end %>
