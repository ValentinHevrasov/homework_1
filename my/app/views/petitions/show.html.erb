<h3 class="text-center"> <%= @petition.title %> </h3>
<p class="text-center"> <%= @petition.created_at.strftime('%d/%m/%Y %R') %> </p>

<p>
  <strong>Текст петиции:</strong>
    <%= @petition.text %>
</p>

<p>Голосов: <%= @petition.votes.count %></p>

<p> <%if @petition.can_vote_on?(current_user) %>
    Вы уже голосовали
  <% else %>
    <%= button_to('Проголосовать', votes_path({petition_id: @petition.id})) %>
  <% end %>
</p>
