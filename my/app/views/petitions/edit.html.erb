<h2 class="text-center">Редактирование петиции</h2>

<%= form_for :petition, url: petition_path(@petition), method: :patch do |f| %>
  <% if @petition.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@petition.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @petition.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <form class="form-horizontal">
    <div class="form-group form-group-sm">
      <label class="col-sm-2 control-label" for="formGroupInputSmall">Тема:</label>
      <div class="col-sm-10">
        <%= f.text_field :title %>
      </div>
    </div>
    <div class="form-group form-group-sm">
      <label class="col-sm-2 control-label" for="formGroupInputSmall">Текст:</label>
      <div class="col-sm-10">
        <%= f.text_area :text %>
      </div>
    </div>
    <div class="actions text-center"> 
      <%= submit_tag 'Сохранить изменения', class: 'btn btn-default' %>
    </div>
  </form>
    </br>
<% end %>

<%= link_to 'Назад', petition_path %>